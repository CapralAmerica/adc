{% extends "AppBundle::layout.html.twig" %}
{% form_theme edit_form 'bootstrap_3_layout.html.twig' %}
{% form_theme edit_form_password 'bootstrap_3_layout.html.twig' %}
{% block body %}


    <div class="page-header">
        <div class="page-title">
            <h3>
                Equipe
                <small>Modifier</small>
            </h3>
        </div>

    </div>
    <div class="panel panel-default">
        <div class="panel-heading">
            <h6 class="panel-title">
                Modifier
            </h6>
        </div>
        <div class="panel-body">
            <div class="row">
                <div class="col-xs-12">
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            Modification
                        </div>
                        <div class="panel-body">
                            <div class="row">
                                <div class="col-sm-2">
                                    <div class="jumbotron" style="padding:20px">
                                        <div class="container">
                                            {% if entity.image %}
                                                <img src="/photos/{{ entity.image }}" class="img-responsive" alt="">
                                            {% else %}
                                                <img src="/photos/employee.png" class="img-responsive" alt="">
                                            {% endif %}
                                        </div>
                                    </div>
                                    <ul class="list-group">
                                        {% if entity.cv %}
                                            <li class="list-group-item"><a href="/files/{{ entity.cv }}"><i
                                                            class="fa fa-paperclip"></i> Cv</a></li>
                                        {% endif %}
                                    </ul>
                                </div>
                                <div class="col-sm-6">

                                    {{ form_start(edit_form) }}
                                    {{ form_errors(edit_form) }}

                                    <div class="form-group">
                                        <label for="">Civilit√©</label>
                                        {{ form_widget(edit_form.sexe,{'attr':{'class':'form-control'}}) }}
                                    </div>
                                    <div class="form-group">
                                        {{ form_label(edit_form.nom) }}
                                        {{ form_widget(edit_form.nom,{'attr':{'class':'form-control'}}) }}
                                    </div>
                                    <div class="form-group">
                                        {{ form_label(edit_form.prenom) }}
                                        {{ form_widget(edit_form.prenom,{'attr':{'class':'form-control'}}) }}
                                    </div>
                                    <div class="form-group">
                                        {{ form_label(edit_form.dateNaissance) }}
                                        {{ form_widget(edit_form.dateNaissance,{'attr':{'class':'form-control-date'}}) }}
                                    </div>
                                    <div class="form-group">
                                        {{ form_label(edit_form.tel) }}
                                        {{ form_widget(edit_form.tel,{'attr':{'class':'form-control'}}) }}
                                    </div>
                                    <div class="form-group">
                                        {{ form_label(edit_form.email) }}
                                        {{ form_widget(edit_form.email,{'attr':{'class':'form-control'}}) }}
                                    </div>
                                    <div class="form-group">
                                        {{ form_label(edit_form.adresse) }}
                                        {{ form_widget(edit_form.adresse,{'attr':{'class':'form-control'}}) }}
                                    </div>

                                    <div class="form-group">
                                        {{ form_label(edit_form.dateEntree) }}
                                        {{ form_widget(edit_form.dateEntree,{'attr':{'class':'form-control-date'}}) }}
                                    </div>

                                    <div class="form-group">
                                        {{ form_label(edit_form.fonction) }}
                                        {{ form_widget(edit_form.fonction,{'attr':{'class':'form-control'}}) }}
                                    </div>
                                    <div class="form-group">
                                        <label for="">Photo</label>
                                        {{ form_widget(edit_form.imagefile,{'attr':{'class':'form-control'}}) }}
                                    </div>

                                    <div class="form-group">
                                        <label for="">Cv</label>
                                        {{ form_widget(edit_form.cvfile,{'attr':{'class':'form-control'}}) }}
                                    </div>

                                    <div class="form-group">
                                        <button type="submit" class="btn btn-primary">Modifier</button>
                                    </div>

                                    {{ form_end(edit_form) }}

                                </div>
                                <div class="col-sm-4">

                                        <div class="panel panel-default">
                                            <div class="panel-heading">Modifier mot de passe</div>
                                            <div class="panel-body">
                                                {{ form_start(edit_form_password) }}
                                                {{ form_errors(edit_form_password) }}
                                                {{ form_widget(edit_form_password) }}
                                                {{ form_end(edit_form_password) }}
                                            </div>

                                        </div>

                                        <div class="panel panel-default">
                                            <div class="panel-heading">Roles du contact</div>
                                            <div class="panel-body">
                                                {{ form_start(edit_form_role) }}
                                                {{ form_errors(edit_form_role) }}
                                                {{ form_widget(edit_form_role) }}
                                                {{ form_end(edit_form_role) }}
                                            </div>

                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="panel-footer">
                            <a href="{{ path('users') }}" class="btn btn-default">
                                Retour a la liste
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

{% endblock %}
