{% extends '/pages/master.layout.html.twig' %}
{% block title %} Регистрация {% endblock %}
{% block content %}
    <div class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-3"></div>
                <div class="col-md-6">
                    <div class="card mt-3">
                        <div class="card-header">
                            <div class="card-title">Регистрация</div>
                        </div>
                        <div class="card-body">
                            <form action="{{ path('create_user') }}" method="POST">
                                <div class="form-group">
                                    <label for="firstName">Имя</label>
                                    <input type="text" class="form-control input-square" id="firstName" name="firstName"
                                           placeholder="Введите Ваше имя">
                                </div>
                                <div class="form-group">
                                    <label for="lastName">Фамилия</label>
                                    <input type="text" class="form-control input-square" id="lastName" name="lastName"
                                           placeholder="Введите Вашу фамилию">
                                </div>
                                <div class="form-group">
                                    <label for="mobile">Номер телефона</label>
                                    <input type="text" class="form-control input-square" id="mobile" name="mobile"
                                           placeholder="Введите Ваш номер">
                                </div>
                                <div class="form-group">
                                    <label for="password">Пароль</label>
                                    <input type="password" class="form-control input-square" id="password" name="password"
                                           placeholder="Введите Ваш пароль">
                                </div>
                                <div class="form-group">
                                    <label for="email">Email (необязателное поле)</label>
                                    <input type="text" class="form-control input-square" id="email" name="email"
                                           placeholder="Введите Ваш email">
                                </div>
                                <div class="card-action">
                                    <button type="submit" class="btn btn-success">Зарегистрироваться</button>
                                </div>
                            </form>
                        </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}