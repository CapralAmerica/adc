{% extends '/pages/master.layout.html.twig' %}
{% block title %} Вход {% endblock %}
{% block content %}
    <div class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-3"></div>
                <div class="col-md-6">
                    <div class="card mt-3">
                        <form action="{{ path('login') }}" method="POST">
                            <div class="card-header">
                                <div class="card-title">Войти</div>
                            </div>
                            <div class="card-body">
                                <div class="form-group">
                                    <label for="squareInput">Номер телефона</label>
                                    <input type="text" class="form-control input-square" id="password" name="mobile"
                                           placeholder="Введите Ваш номер">
                                </div>
                                <div class="form-group">
                                    <label for="squareInput">Пароль</label>
                                    <input type="password" class="form-control input-square" id="password" name="password"
                                           placeholder="Введите Ваш пароль">
                                </div>
                            </div>
                            <div class="card-action">
                                <button type="submit" class="btn btn-success">Вход</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}